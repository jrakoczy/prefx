<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>Archetype Created Web Application</display-name>
	<filter>
		<filter-name>AuthorizationFilter</filter-name>
		<filter-class>com.jrakoczy.prefx.presenter.AuthorizationFilter</filter-class>
		<init-param>
			<param-name>omitted</param-name>
			<param-value>
			    login.html
			    authenticate
			    js/
			    css/
			    img/
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<servlet>
		<servlet-name>TestServlet</servlet-name>
		<servlet-class>com.jrakoczy.prefx.test.TestServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>com.jrakoczy.prefx.presenter.RegistrationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AuthenticationServlet</servlet-name>
		<servlet-class>com.jrakoczy.prefx.presenter.AuthenticationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OverviewServlet</servlet-name>
		<servlet-class>com.jrakoczy.prefx.presenter.OverviewServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SurveyServlet</servlet-name>
		<servlet-class>com.jrakoczy.prefx.presenter.SurveyServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DisplaySurveyServlet</servlet-name>
		<servlet-class>com.jrakoczy.prefx.presenter.DisplaySurveyServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>TestServlet</servlet-name>
		<url-pattern>/TestServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuthenticationServlet</servlet-name>
		<url-pattern>/authenticate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OverviewServlet</servlet-name>
		<url-pattern>/OverviewServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SurveyServlet</servlet-name>
		<url-pattern>/SurveyServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DisplaySurveyServlet</servlet-name>
		<url-pattern>/DisplaySurveyServlet</url-pattern>
	</servlet-mapping>


	<session-config>
		<session-timeout>30</session-timeout>
		<cookie-config>
			<http-only>true</http-only>
		</cookie-config>
	</session-config>

	<welcome-file-list>
		<welcome-file>overview.html</welcome-file>
	</welcome-file-list>

</web-app>
